# Nivasa Society Management System - Backend Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nivasa_society

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this
JWT_EXPIRE=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Admin Default Credentials (CHANGE THESE IN PRODUCTION!)
ADMIN_EMAIL=admin@nivasa.com
ADMIN_PASSWORD=your_secure_admin_password

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100